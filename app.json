{
  "expo": {
    "name": "Oja",
    "slug": "oja",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "oja",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#EA5B62"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oja.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Oja needs camera access to scan receipts",
        "NSPhotoLibraryUsageDescription": "Oja needs photo access to select receipt images"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#EA5B62"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.oja.app",
      "permissions": ["CAMERA", "VIBRATE", "RECEIVE_BOOT_COMPLETED"]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#EA5B62"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Oja to access your camera to scan receipts"
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.oja.app",
          "enableGooglePay": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
