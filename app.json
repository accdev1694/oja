{
  "expo": {
    "name": "Oja",
    "slug": "oja",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "oja",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1528"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oja.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Oja needs camera access to scan receipts",
        "NSPhotoLibraryUsageDescription": "Oja needs photo access to select receipt images",
        "NSSpeechRecognitionUsageDescription": "Oja uses speech recognition for the voice assistant",
        "NSMicrophoneUsageDescription": "Oja needs microphone access for the voice assistant"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D1528"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.oja.app",
      "permissions": [
        "CAMERA",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#EA5B62"
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Oja needs microphone access for the voice assistant",
          "speechRecognitionPermission": "Oja uses speech recognition for the voice assistant"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Oja to access your camera to scan receipts"
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.oja.app",
          "enableGooglePay": true
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9814435d-ea39-4f8a-bd9e-3055f6dbeb23"
      }
    }
  }
}
